{
  "name": "gcsim",
  "packageManager": "yarn@3.2.4",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn cache clean && rimraf node_modules",
    "lint": "eslint --max-warnings 0 .",
    "circular": "yarn madge --circular --extensions ts ./",
    "orphans": "yarn madge --orphans --extensions ts ./",
    "list-deps": "syncpack list",
    "list-mismatches": "syncpack list-mismatches",
    "fix-mismatches": "syncpack fix-mismatches",
    "start:web": "yarn workspace @gcsim/web dev"
  },
  "devDependencies": {
    "@types/eslint": "^8",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/rimraf": "^3",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "autoprefixer": "^10.4.12",
    "eslint": "^8.26.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-workspaces": "^0.7.0",
    "lerna": "^6.0.1",
    "madge": "^5.0.1",
    "postcss": "^8.4.18",
    "rimraf": "^3.0.2",
    "syncpack": "^8.2.4",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.8.4"
  }
}
