{
  "name": "gcsim",
  "packageManager": "yarn@3.2.4",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn cache clean && rimraf node_modules",
    "lint": "eslint --max-warnings 0 .",
    "circular": "yarn madge --circular --extensions ts ./",
    "orphans": "yarn madge --orphans --extensions ts ./",
    "list-deps": "syncpack list",
    "list-mismatches": "syncpack list-mismatches",
    "fix-mismatches": "syncpack fix-mismatches",
    "start": "concurrently \"yarn:gen:watch\" \"yarn:start:watch-wasm\" \"yarn:start:web\"",
    "start:watch-wasm": "yarn workspace @gcsim/executors watch:web",
    "start:web": "yarn workspace @gcsim/web dev",
    "start:embed": "yarn workspace @gcsim/embed dev",
    "start:db": "yarn workspace @gcsim/db dev",
    "preview": "yarn run preview:web",
    "preview:web": "yarn workspace @gcsim/web preview",
    "build": "yarn run gen && yarn run build:wasm && yarn run build:web",
    "build:wasm": "yarn workspace @gcsim/executors build:wasm:web",
    "build:web": "yarn workspace @gcsim/web build",
    "build:embed": "yarn workspace @gcsim/embed build",
    "deploy:workers": "yarn workspace @gcsim/workers deploy",
    "start:workers": "yarn workspace @gcsim/workers start",
    "gen": " yarn pbjs --keep-case -t static-module -w commonjs -o ./packages/types/src/protos.js ../protos/model/db.proto ../protos/model/result.proto ../protos/model/sim.proto  ../protos/backend/db.proto ../protos/backend/submission.proto  ../protos/backend/compute.proto   && yarn pbts -o ./packages/types/src/protos.d.ts ./packages/types/src/protos.js && rm ./packages/types/src/protos.js ",
    "gen:watch": "watch \"yarn run gen:copy:db\" ../protos/model ../protos/backend"
  },
  "devDependencies": {
    "@types/eslint": "^8",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/rimraf": "^3",
    "@types/watch": "^1",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.5.0",
    "eslint": "^8.26.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-workspaces": "^0.7.0",
    "lerna": "^6.0.1",
    "madge": "^5.0.1",
    "postcss": "^8.4.18",
    "protobufjs": "^7.1.2",
    "protobufjs-cli": "^1.0.2",
    "rimraf": "^3.0.2",
    "syncpack": "^8.2.4",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.8.4",
    "watch": "^1.0.2"
  }
}
